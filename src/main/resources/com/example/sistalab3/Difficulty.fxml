<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="difficultyGridPane" alignment="center" hgap="10" prefHeight="270.0" prefWidth="400.0" style="-fx-background-color: #f0f0f0;" stylesheets="@css/difficulty.css" vgap="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistalab3.controller.DifficultyController">
    <!-- Sätt padding runt GridPane -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Rubrik: Choose Your Difficulty -->
    <Label prefHeight="31.0" prefWidth="274.0" style="-fx-font-size: 24px;-fx-font-family: 'Beirut'; -fx-font-weight: bold; -fx-text-fill: #fcfcfc;" text="Choose Your Difficulty" textFill="#c6e2ff" translateX="5.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        <font>
            <Font name="Arial" size="24" />
        </font>
    </Label>

    <!-- Co-op Button -->
    <Button fx:id="coopButton" minWidth="200" onAction="#handleCoop" style="-fx-font-size: 18px; -fx-background-radius: 10; -fx-background-color: #2196F3; -fx-text-fill: white;" text="Co-op" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

    <!-- Svårighetsknappar -->
    <Button fx:id="easyButton" minWidth="200" onAction="#handleEasy" style="-fx-font-size: 18px; -fx-background-radius: 10; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Easy" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <Button fx:id="mediumButton" minWidth="200" onAction="#handleMedium" style="-fx-font-size: 18px; -fx-background-radius: 10; -fx-background-color: #FFC107; -fx-text-fill: white;" text="Medium" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    <Button fx:id="hardButton" minWidth="200" onAction="#handleHard" style="-fx-font-size: 18px; -fx-background-radius: 10; -fx-background-color: #F44336; -fx-text-fill: white;" text="Hard" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" />


    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
